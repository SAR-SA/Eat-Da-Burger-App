<h1>Eat Da Burgers</h1>

<div class="add">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>

<div class="windows">
<div class="menu">
<h2>Menu</h2>
<hr>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="devoured">

<h2>Devoured Burgers</h2>
<hr>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
